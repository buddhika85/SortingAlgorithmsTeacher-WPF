<Window x:Class="AlgoTeacherWPF.View.AlgorithmDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoTeacherWPF.View"
        mc:Ignorable="d"
        Title="Algorithm Details" Height="850" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />       <!-- Main Header -->
            <RowDefinition />       <!-- Description -->

            <RowDefinition />       <!-- Time Complexity and stability Section Header -->
            <RowDefinition />       <!-- Time Complexity and stability table -->

            <RowDefinition />       <!-- Setup data set section header -->
            <RowDefinition />       <!-- Original data set display - array view -->

            <RowDefinition />       <!-- Configure data set form -->

            <RowDefinition />       <!-- Visualization -->

            <RowDefinition />       <!-- Analysis section -->

            <RowDefinition />       <!-- Steps section  -->
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding Algorithm.Name}" Style="{StaticResource MainHeader}"></Label>
        <Label Grid.Row="1" Content="{Binding Algorithm.Description}"></Label>
    </Grid>
</Window>
